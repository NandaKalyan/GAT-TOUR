<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clg_details"
    android:background="@drawable/bb1"
    >


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="384dp"
        android:layout_height="508dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#00B0FF"
                android:text="INFORMATION SCIENCE AND ENGINEERING" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#FF9100"
                android:text="COMPUTER SCIENCE AND ENGINEERING" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#E85252"
                android:text="MECHANICAL ENGINEERING" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#00B0FF"
                android:text="CIVIL ENGINEERING" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#FF9100"
                android:text="ELECTRICAL AND ELECTRONICS ENGINEERING" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#E85252"
                android:text="ARITFICIAL INTELLIGENCE AND DATA SCIENCE" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#00B0FF"
                android:text="AERONAUTICAL ENGINEERING" />


            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#FF9100"
                android:text="ELECTRONICS AND COMMUNICATION ENGINEERING" />

            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:backgroundTint="#E85252"
                android:text="ARTIFICIAL INTELLIGENCE AND MACHINE LEARNING" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="415dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/top" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="364dp"
        android:layout_height="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/good" />
</androidx.constraintlayout.widget.ConstraintLayout>